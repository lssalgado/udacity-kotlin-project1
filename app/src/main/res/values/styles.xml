<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="roboto">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="roboto_20" parent="roboto">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="roboto_16" parent="roboto">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="shoe_details_edit_text" parent="roboto_20">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="shoe_details_text_view" parent="roboto_20">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
    </style>

    <style name="login_edit_text" parent="roboto_16">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="login_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
    </style>

    <style name="list_row_description_images" parent="roboto_16">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
    </style>

    <style name="list_row_label" parent="roboto_16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
    </style>

    <style name="list_row_text_values" parent="roboto_16">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
    </style>

</resources>
